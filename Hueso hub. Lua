-- Hueso Hub â€“ Escape the Tsunami for Latamrot ðŸŒŠ
repeat task.wait() until game:IsLoaded()

local player = game:GetService("Players").LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local humanoid = char:WaitForChild("Humanoid")
local playerGui = player:WaitForChild("PlayerGui")

-- Crear GUI principal
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "HuesoHubLatamrot"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 240, 0, 340)
frame.Position = UDim2.new(0, 20, 0, 20)
frame.BackgroundColor3 = Color3.fromRGB(75, 0, 130) -- Ã­ndigo
frame.BorderSizePixel = 3
frame.BorderColor3 = Color3.fromRGB(138, 43, 226)
frame.Active = true -- permite interacciÃ³n
frame.Draggable = true -- hace el hub movible
frame.Parent = screenGui

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 50)
title.Text = "ðŸ¦´ Escape the Tsunami for Latamrot ðŸŒŠ"
title.TextColor3 = Color3.fromRGB(173, 216, 230)
title.BackgroundTransparency = 1
title.Font = Enum.Font.SourceSansBold
title.TextScaled = true
title.Parent = frame

-- NotificaciÃ³n fosforescente
local function notify(msg)
    local label = Instance.new("TextLabel", screenGui)
    label.Size = UDim2.new(0, 300, 0, 50)
    label.Position = UDim2.new(0.5, -150, 0.2, 0)
    label.BackgroundTransparency = 0.3
    label.BackgroundColor3 = Color3.fromRGB(75, 0, 130)
    label.Text = msg
    label.TextColor3 = Color3.fromRGB(0, 255, 255)
    label.Font = Enum.Font.SourceSansBold
    label.TextScaled = true

    task.spawn(function()
        task.wait(2)
        for i = 1, 20 do
            label.TextTransparency = i * 0.05
            label.BackgroundTransparency = 0.3 + (i * 0.05)
            task.wait(0.05)
        end
        label:Destroy()
    end)
end

-- Estados
local speedOn, jumpOn, immuneOn = false, false, false

-- BotÃ³n SpeedBoost (descarado ðŸš€)
local btn1 = Instance.new("TextButton", frame)
btn1.Size = UDim2.new(1, -20, 0, 40)
btn1.Position = UDim2.new(0, 10, 0, 60)
btn1.Text = "SpeedBoost âš¡ (OFF)"
btn1.BackgroundColor3 = Color3.fromRGB(0, 255, 255)
btn1.TextColor3 = Color3.fromRGB(0, 0, 0)
btn1.Font = Enum.Font.SourceSansBold
btn1.TextScaled = true

btn1.MouseButton1Click:Connect(function()
    speedOn = not speedOn
    if speedOn then
        humanoid.WalkSpeed = 120
        btn1.Text = "SpeedBoost âš¡ (ON)"
        notify("âš¡ SpeedBoost descarado activado")
    else
        humanoid.WalkSpeed = 16
        btn1.Text = "SpeedBoost âš¡ (OFF)"
        notify("âš¡ SpeedBoost desactivado")
    end
end)

-- BotÃ³n Infinity Jump
local btn2 = Instance.new("TextButton", frame)
btn2.Size = UDim2.new(1, -20, 0, 40)
btn2.Position = UDim2.new(0, 10, 0, 110)
btn2.Text = "Infinity Jump ðŸ¦´ (OFF)"
btn2.BackgroundColor3 = Color3.fromRGB(255, 255, 0)
btn2.TextColor3 = Color3.fromRGB(0, 0, 0)
btn2.Font = Enum.Font.SourceSansBold
btn2.TextScaled = true

btn2.MouseButton1Click:Connect(function()
    jumpOn = not jumpOn
    if jumpOn then
        btn2.Text = "Infinity Jump ðŸ¦´ (ON)"
        notify("ðŸ¦´ Infinity Jump activado")
        game:GetService("UserInputService").JumpRequest:Connect(function()
            if jumpOn and humanoid and humanoid.Parent then
                humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
            end
        end)
    else
        btn2.Text = "Infinity Jump ðŸ¦´ (OFF)"
        notify("ðŸ¦´ Infinity Jump desactivado")
    end
end)

-- BotÃ³n Inmunidad
local btn3 = Instance.new("TextButton", frame)
btn3.Size = UDim2.new(1, -20, 0, 40)
btn3.Position = UDim2.new(0, 10, 0, 160)
btn3.Text = "Inmunidad ðŸŒŠ (OFF)"
btn3.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
btn3.TextColor3 = Color3.fromRGB(255, 255, 255)
btn3.Font = Enum.Font.SourceSansBold
btn3.TextScaled = true

btn3.MouseButton1Click:Connect(function()
    immuneOn = not immuneOn
    if immuneOn then
        btn3.Text = "Inmunidad ðŸŒŠ (ON)"
        notify("ðŸŒŠ Inmunidad activada")
        humanoid:GetPropertyChangedSignal("Health"):Connect(function()
            if immuneOn and humanoid.Health < humanoid.MaxHealth then
                humanoid.Health = humanoid.MaxHealth
            end
        end)
    else
        btn3.Text = "Inmunidad ðŸŒŠ (OFF)"
        notify("ðŸŒŠ Inmunidad desactivada")
    end
end)

-- BotÃ³n Teleport Final
local btn4 = Instance.new("TextButton", frame)
btn4.Size = UDim2.new(1, -20, 0, 40)
btn4.Position = UDim2.new(0, 10, 0, 210)
btn4.Text = "Teleport Final ðŸ"
btn4.BackgroundColor3 = Color3.fromRGB(138, 43, 226)
btn4.TextColor3 = Color3.fromRGB(255, 255, 255)
btn4.Font = Enum.Font.SourceSansBold
btn4.TextScaled = true

btn4.MouseButton1Click:Connect(function()
    local hrp = char:FindFirstChild("HumanoidRootPart")
    if hrp then
        hrp.CFrame = CFrame.new(-1545.4, 46, 10)
        notify("ðŸ Teleport a la zona final")
    end
end)

-- BotÃ³n Teleport Inicio
local btn5 = Instance.new("TextButton", frame)
btn5.Size = UDim2.new(1, -20, 0, 40)
btn5.Position = UDim2.new(0, 10, 0, 260)
btn5.Text = "Teleport Inicio â¬…ï¸"
btn5.BackgroundColor3 = Color3.fromRGB(0, 128, 255)
btn5.TextColor3 = Color3.fromRGB(255, 255, 255)
btn5.Font = Enum.Font.SourceSansBold
btn5.TextScaled = true

btn5.MouseButton1Click:Connect(function()
    local hrp = char:FindFirstChild("HumanoidRootPart")
    if hrp then
        hrp.CFrame = CFrame.new(63.5, 54, 0.8)
        notify("â¬…ï¸ Teleport al inicio")
    end
end)-- BotÃ³n Hitbox Expander
local btn6 = Instance.new("TextButton", frame)
btn6.Size = UDim2.new(1, -20, 0, 40)
btn6.Position = UDim2.new(0, 10, 0, 310)
btn6.Text = "Hitbox Expander ðŸŽ¯ (OFF)"
btn6.BackgroundColor3 = Color3.fromRGB(255, 105, 180)
btn6.TextColor3 = Color3.fromRGB(0, 0, 0)
btn6.Font = Enum.Font.SourceSansBold
btn6.TextScaled = true

local hitboxOn = false
local hitboxSize = 10 -- tamaÃ±o inicial

-- Dropdown simple para elegir tamaÃ±o
local sizeDropdown = Instance.new("TextButton", frame)
sizeDropdown.Size = UDim2.new(1, -20, 0, 30)
sizeDropdown.Position = UDim2.new(0, 10, 0, 355)
sizeDropdown.Text = "TamaÃ±o: x10"
sizeDropdown.BackgroundColor3 = Color3.fromRGB(173, 216, 230)
sizeDropdown.TextColor3 = Color3.fromRGB(0, 0, 0)
sizeDropdown.Font = Enum.Font.SourceSansBold
sizeDropdown.TextScaled = true

local sizeOptions = {10, 20, 30} -- diferentes expansiones
local currentIndex = 1

sizeDropdown.MouseButton1Click:Connect(function()
    currentIndex = currentIndex % #sizeOptions + 1
    hitboxSize = sizeOptions[currentIndex]
    sizeDropdown.Text = "TamaÃ±o: x"..hitboxSize
    notify("ðŸŽ¯ TamaÃ±o de hitbox ajustado a x"..hitboxSize)
    if hitboxOn then
        for _, plr in pairs(game:GetService("Players"):GetPlayers()) do
            if plr ~= player and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
                plr.Character.HumanoidRootPart.Size = Vector3.new(hitboxSize, hitboxSize, hitboxSize)
            end
        end
    end
end)

-- FunciÃ³n para aplicar el hitbox expander a un jugador
local function expandHitbox(plr)
    if plr ~= player and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
        plr.Character.HumanoidRootPart.Size = Vector3.new(hitboxSize, hitboxSize, hitboxSize)
        plr.Character.HumanoidRootPart.Transparency = 0.7
        plr.Character.HumanoidRootPart.CanCollide = false
    end
end

-- FunciÃ³n para restaurar el hitbox
local function restoreHitbox(plr)
    if plr ~= player and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
        plr.Character.HumanoidRootPart.Size = Vector3.new(2, 2, 1)
        plr.Character.HumanoidRootPart.Transparency = 1
        plr.Character.HumanoidRootPart.CanCollide = true
    end
end

btn6.MouseButton1Click:Connect(function()
    hitboxOn = not hitboxOn
    if hitboxOn then
        btn6.Text = "Hitbox Expander ðŸŽ¯ (ON)"
        notify("ðŸŽ¯ Hitbox Expander activado")
        -- Aplicar a todos los jugadores actuales
        for _, plr in pairs(game:GetService("Players"):GetPlayers()) do
            expandHitbox(plr)
        end
        -- Aplicar automÃ¡ticamente a nuevos jugadores
        game:GetService("Players").PlayerAdded:Connect(function(newPlr)
            newPlr.CharacterAdded:Connect(function()
                if hitboxOn then
                    expandHitbox(newPlr)
                end
            end)
        end)
    else
        btn6.Text = "Hitbox Expander ðŸŽ¯ (OFF)"
        notify("ðŸŽ¯ Hitbox Expander desactivado")
        -- Restaurar a todos los jugadores actuales
        for _, plr in pairs(game:GetService("Players"):GetPlayers()) do
            restoreHitbox(plr)
        end
    end
end)
